<h2> Iniciar Sesión </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-outline mb-4">
    <%= f.label :email, class:'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'%>
  </div>

  <!-- Password input -->
   <div class="form-outline mb-4">
    <%= f.label :password, class:'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
  </div>

  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <% if devise_mapping.rememberable? %>
        <div class="form-check">
           <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label  :remember_me, class:"form-check-label"%>
        </div>
      <% end %>
      <!-- Checkbox -->
    </div>


    <div class="col">
      <!-- Simple link -->
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name) %><br />
      <% end %>
    </div>
  </div>

  <!-- Submit button -->
  <%# <button type="button" class="btn btn-primary btn-block mb-4">Sign in</button> %>
  <%= f.submit "Log in", class:"btn btn-primary btn-block mb-4" %>
  <!-- Register buttons -->
  <div class="text-center">
    <p>¿Aún no Registrado? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
  </div>
<% end %>

