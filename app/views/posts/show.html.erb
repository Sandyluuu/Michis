<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
  <%= link_to "Back to posts", posts_path %>
    <% Post::Kinds.each do |kind| %>
      <%= button_to "#{Post::KindsMoji[kind]}", new_user_reaction_path(post_id: @post.id, reaction_type:"post", kind: kind), method: :post %>
    <% end %>
    <div class="row">
    <% @post.reactions.group(:kind).count.each do |reaction, count| %>
      
        <div class="col-1">
          <%= count %> <%= "#{Post::KindsMoji[reaction]}" %>
        </div>
    <% end %>
    </div>

</div>

<%= render 'comments/form' %>
          <p>
            <% if @post.comments.any? %>
               <h4>Comments:</h4>
                  <ul>
                      <% @post.comments.each do |comment| %>
                    <li>
                      <strong><%= comment.user.name %>:</strong> <%= comment.content %>
                    </li>
            <% end %>
                  </ul>
            <% else %>
               <p>No comments yet.</p>
            <% end %>
          </p>